					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "unprocessed",
						"folderPath": "cyber-data",
						"container": "cyber-threat-data"
